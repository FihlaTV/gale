<?xml version="1.0"?>
<!DOCTYPE StGermainData SYSTEM "stgermain.dtd">
<!-- A StGermain input file -->
<!-- DTD to validate against -->
<StGermainData xmlns="http://www.vpac.org/StGermain/XML_IO_Handler/Jun2003">
	
	<!-- TemperatureField Stuff -->
	<struct name="components" mergeType="merge">
		<struct name="temperature" mergeType="replace">
			<param name="Type">Variable</param>
			<param name="Rank">Scalar</param>
			<param name="Dependency">Temp_decomp-linear</param>
			<param name="DataType">Double</param>
			<param name="Count">Temp_decomp-linear-nodeDomainCount</param>
		</struct>
		<struct name="temperatureBCs" mergeType="replace">
			<param name="Type">CompositeVC</param>
			<param name="Data">Temp_mesh-linear</param>
		</struct>
		<struct name="temperatureICs" mergeType="replace">
			<param name="Type">CompositeVC</param>
			<param name="Data">Temp_mesh-linear</param>
		</struct>		
		<struct name="temperatureDofLayout" mergeType="replace">
			<param name="Type">DofLayout</param>
			<param name="Count">Temp_decomp-linear-nodeDomainCount</param>
			<list name="BaseVariables">
				<param>temperature</param>
			</list>
		</struct>		
		<struct name="TemperatureField" mergeType="replace">
			<param name="Type">FeVariable</param>
			<param name="FEMesh">Temp_mesh-linear</param>
			<param name="DofLayout">temperatureDofLayout</param>
			<param name="BC">temperatureBCs</param>
			<param name="IC">temperatureICs</param>
			<param name="LinkedDofInfo">temperatureLinkedDofs</param>
		</struct>

		<!-- Standard Operators on Temperature field -->
		<struct name="TemperatureGradientsField" mergeType="replace"> 
			<param name="Type">OperatorFeVariable</param>
			<param name="Operator">Gradient</param>
			<param name="FeVariable">TemperatureField</param>
		</struct>	

	</struct>

</StGermainData>
