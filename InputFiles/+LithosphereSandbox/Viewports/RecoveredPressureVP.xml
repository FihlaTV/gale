			<param name="Type">lucViewport</param>
			<param name="Camera">lithosphereSandboxPerspectiveViewCamera1</param>
			<param name="compositeEachObject">true</param>
			<list name="DrawingObject">
				<param> pressureLayers-UpperCrust </param>
