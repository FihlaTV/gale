<!--Now the interesting stuff-->


<list name="Params">
	<struct>
		<param name="Name">offsetX</param>
		<param name="Type">UnsignedInt</param>
		<param name="Default">50</param>
		<param name="Description">The horizontal distance from the top left corner of the screen to the window.</param>
	</struct>
	<struct>
		<param name="Name">offsetY</param>
		<param name="Type">UnsignedInt</param>
		<param name="Default">50</param>
		<param name="Description">The vertical distance from the top left corner of the screen to the window.</param>
	</struct>
	<struct>
		<param name="Name">maxIdleTime</param>
		<param name="Type">Double</param>
		<param name="Default">600.0</param>
		<param name="Description">The maximum time that the window can be open without user input. This is so that the user is warned when running the program with interactive turned on but without being aware. This feature isn't yet implemented properly for lucCarbonWindow.</param>
	</struct>

</list>

<list name="Dependencies">

</list>
